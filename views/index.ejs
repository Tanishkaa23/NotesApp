<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes App</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet"/>
</head>
<body class="bg-gray-900 text-gray-100">
    <main class="container mx-auto p-5">
        <nav class="bg-gray-800 rounded-lg shadow-md p-4 mb-8">
            <div class="flex justify-between items-center">
                <div class="logo text-3xl font-bold text-blue-400">
                    <h1>Notes App</h1>
                </div>
                <div class="links space-x-6 text-xl">
                    <a href="/" class="text-gray-300 hover:text-blue-400 transition duration-300">Home</a>
                    <a href="/new" class="text-gray-300 hover:text-blue-400 transition duration-300">Create Notes</a>
                </div>
            </div>
        </nav>

        <div class="bg-gray-800 rounded-lg shadow-lg p-6">
            <% if(dir.length > 0) { %>
                <h2 class="text-3xl font-bold mb-6 text-blue-400">Your Notes</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                    <% dir.forEach(function(file) { %>
                        <div class="bg-gray-700 p-5 rounded-lg shadow-md hover:shadow-lg transition duration-300">
                            <h3 class="text-xl font-semibold mb-3 text-blue-300"><%= file %></h3>
                            <div class="flex justify-between items-center">
                                <a href="/uploads/<%= file %>" class="text-blue-400 hover:text-blue-300 transition duration-300">View Note</a>
                                <div class="space-x-2">
                                    <a href="/edit/<%= file %>" class="text-gray-400 hover:text-blue-400 transition duration-300"><i class="ri-pencil-line"></i></a>
                                    <a href="/delete/<%= file %>" class="text-gray-400 hover:text-red-400 transition duration-300"><i class="ri-delete-bin-line"></i></a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <h1 class="text-2xl text-gray-400 text-center py-10">No notes available</h1>
            <% } %>
        </div>
    </main>
</body>
</html>